# ===========================================
# USDX 稳定币项目环境变量配置示例
# ===========================================
# 复制此文件为 .env 并填写实际值

# =================== 网络配置 ===================

# 私钥 (用于部署和交互，请使用测试网专用私钥)
PRIVATE_KEY=your_private_key_here

# Infura API Key (以太坊网络连接)
INFURA_API_KEY=your_infura_api_key_here

# Alchemy API Key (替代网络连接)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# =================== 区块链浏览器 API ===================

# Etherscan API Key (以太坊合约验证)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Polygonscan API Key (Polygon合约验证)
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# BSCScan API Key (BSC合约验证)
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Arbitrum Explorer API Key
ARBITRUMSCAN_API_KEY=your_arbitrumscan_api_key_here

# Optimism Explorer API Key
OPTIMISMSCAN_API_KEY=your_optimismscan_api_key_here

# =================== 工具配置 ===================

# CoinMarketCap API Key (Gas报告价格获取)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Gas报告启用 (设置为 'true' 启用)
REPORT_GAS=false

# =================== 编译优化 ===================

# 优化器运行次数 (默认: 200)
OPTIMIZER_RUNS=200

# 启用 Yul 中间表示优化 (实验性)
VIA_IR=false

# =================== 测试配置 ===================

# 测试超时时间 (毫秒)
MOCHA_TIMEOUT=200000

# 并行测试启用
PARALLEL_TESTS=false

# 并行任务数量
PARALLEL_JOBS=4

# 测试失败时立即停止
BAIL_ON_FAIL=false

# Mocha 报告器
MOCHA_REPORTER=spec

# =================== 开发工具 ===================

# 合约大小检查 (编译时自动运行)
SIZE_CONTRACTS=true

# Gas报告输出文件
GAS_REPORT_FILE=gas-report.txt

# Gas报告格式 (terminal|json|html)
GAS_REPORT_FORMAT=terminal

# 调试模式
DEBUG=false

# =================== 网络分叉 ===================

# 分叉网络URL (本地测试用)
# FORK_URL=https://mainnet.infura.io/v3/your_infura_key

# 分叉区块号 (留空使用最新区块)
# FORK_BLOCK_NUMBER=18500000

# 挖矿间隔 (毫秒，0为自动挖矿)
MINING_INTERVAL=0

# =================== 部署配置 ===================

# 初始代币供应量 (单位: 代币数量，不含小数位)
INITIAL_SUPPLY=1000000

# 治理代币分配地址
GOVERNANCE_ADDRESS=0x0000000000000000000000000000000000000000

# 多签钱包地址
MULTISIG_ADDRESS=0x0000000000000000000000000000000000000000

# =================== 合规配置 ===================

# KYC 提供商 API
KYC_PROVIDER_API=your_kyc_api_here

# 制裁名单API
SANCTIONS_API=your_sanctions_api_here

# =================== 监控配置 ===================

# 监控服务 API Key
MONITORING_API_KEY=your_monitoring_key_here

# 告警邮箱
ALERT_EMAIL=alerts@usdx.finance

# =================== 安全配置 ===================

# 安全扫描启用
SECURITY_SCAN=true

# Slither 额外参数
SLITHER_ARGS=--exclude-dependencies

# =================== CI/CD 配置 ===================

# GitHub Token (用于 CI/CD)
GITHUB_TOKEN=your_github_token_here

# Codecov Token (代码覆盖率上传)
CODECOV_TOKEN=your_codecov_token_here

# =================== 备份配置 ===================

# AWS S3 配置 (用于备份)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=usdx-backups

# =================== 外部服务 ===================

# Discord Webhook (通知)
DISCORD_WEBHOOK=your_discord_webhook_here

# Slack Webhook (通知)
SLACK_WEBHOOK=your_slack_webhook_here

# Telegram Bot Token (通知)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# =================== 开发环境 ===================

# 开发环境标识
NODE_ENV=development

# 日志级别 (debug|info|warn|error)
LOG_LEVEL=info

# =================== 注意事项 ===================
# 1. 请勿将此文件(包含实际值的.env)提交到版本控制
# 2. 生产环境请使用专用的安全存储方案
# 3. 定期轮换API密钥和私钥
# 4. 测试网和主网请使用不同的配置
