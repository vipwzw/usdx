{
  "name": "usdx-stablecoin-contracts",
  "version": "1.0.0",
  "description": "USDX stablecoin smart contracts with ERC-1404 compliance and multi-signature governance",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify": "hardhat run scripts/verify.js",
    "security-check": "hardhat run scripts/security-check.js",
    "monitor": "hardhat run scripts/monitor.js",
    "upgrade": "hardhat run scripts/upgrade.js",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'src/**/*.sol'",
    "lint:js": "eslint 'test/**/*.js' 'scripts/**/*.js'",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint 'src/**/*.sol' --fix",
    "lint:js:fix": "eslint 'test/**/*.js' 'scripts/**/*.js' --fix",
    "format": "prettier --write 'src/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "analyze": "slither src/",
    "size": "hardhat size-contracts",
    "flatten": "hardhat flatten",
    "docgen": "hardhat docgen"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "smart-contracts",
    "defi",
    "stablecoin",
    "erc20",
    "erc1404",
    "governance",
    "upgradeable"
  ],
  "author": "USDX Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@openzeppelin/hardhat-upgrades": "^2.2.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.8",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "ethers": "^6.7.1",
    "hardhat": "^2.17.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.4",
    "typechain": "^8.3.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.8.3"
  }
} 